pragma zkay >=0.2.0;

contract HomomorphicAddition {

	final address owner;
	int248@owner<+> a;
	int248@owner<+> b;
	int248@owner<+> sum;
	int248@owner<+> diff;

	constructor(int248@me _a, int248@me _b) public {
		owner = me;
		a = _a;
		b = _b;
	}

	function f() public {
		sum = a + b;
		diff = a - b;
	}
}
